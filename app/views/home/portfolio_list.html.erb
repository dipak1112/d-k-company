<section class="pageheader-default text-center">
	<div class="semitransparentbg">
		<h1 class="animated fadeInLeftBig notransition">Portfolio</h1>
		<p class="animated fadeInUp container page-description"></p>
	</div>
</section>

<div class="wrapsemibox">
	<div class="semiboxshadow text-center">
	</div>
	
	<section class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<div id="filter" class="animated fadeInRight">
					<ul>
						<li><a href="" data-filter="*" class="selected"><i class="icon icon-reorder"></i> All Items</a></li>
						<% ProjectType.all.each do |project_type| %>
							<li><a href="" data-filter=".<%= project_type.name.gsub(' ','_') %>"><i class="icon icon-th-large"></i> <%= project_type.name %></a></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<!-- END filtering menu -->
		<div id="content" style="position: relative; overflow: hidden; height: 3242px;" class="isotope">
			
			<% @projects.each do |project| %>			
				<div class="boxportfolio3 item <%= project.project_type.name.gsub(' ','_') %> isotope-item" style="position: absolute; left: 0px; top: 0px; -webkit-transform: translate(0px, 1289px);">
					<div class="boxcontainer">
						<%= image_tag(project.avatar(:pfolio, false))%>
						<div class="roll" style="opacity: 0;">
							<div class="wrapcaption">
								<a href="<%= portfolio_path(project) %>"><i class="icon-link captionicons"></i></a>
								<a data-gal="prettyPhoto[gallery1]" href="<%= project.avatar %>" title="Title Here"><i class="icon-zoom-in captionicons"></i></a>
							</div>
						</div>
						<h1><%= link_to project.project_title, portfolio_url(project) %></h1>
						<p><%= project.short_description.truncate(50) %></p>
					</div>
				</div>
			<% end %>
		</div>
	</section>
</div>