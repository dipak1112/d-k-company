<section class="slice color3" id="works">
  <div class="container clearfix">
    <div class="row">
      <div class="span12"><h1>Our Work</h1></div>
      <nav id="filter" class="span12 text-center">
        <ul>
          <li><a href="" class="current btn btn-small" data-filter="*">All</a></li>
          <li><a href=""  class="btn btn-small" data-filter=".ROR" >Ruby on Rails</a></li>
          <li><a href=""  class="btn btn-small" data-filter=".Iphone">Iphone</a></li>
          <li ><a href="" class="btn btn-small" data-filter=".Android">Android</a></li>
        </ul>
      </nav>
      <div class="span12">
        <div class="row">
          <div class="portfolio-items isotopeWrapper clearfix imgHover" id="3">
            <% if @projects.present? %>
              <% @projects.each do |project| %>
                <article class="boxLink boxNew span4 isotopeItem <%= project.project_type %>">
                  <section class="imgWrapper"><%= image_tag(project.avatar(:thumb,false)) %></section>
                  <div class="media-hover">
                    <div class="mask"></div>
                    <div class="iconLinks"> 
                      <a href="<%= show_project_path(project) %>" title="link" class="sizer iconWrapper"><i class="icon-picture"></i></a> 
                      <a href="<%= project.avatar %>" class="prettyPhoto iconWrapper" title="Zoom"><i class="icon-search"></i></a>
                    </div>
                  </div>
                  <section class="boxContent">
                    <h3><%= project.project_title %></h3>
                    <p>
                      <%= project.short_description %><br>
                      <%= link_to "Read More", show_project_path(project), :class => "moreLink" %>
                    </p>
                  </section>
                </article>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


