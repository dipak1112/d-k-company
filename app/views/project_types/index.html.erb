<%- model_class = ProjectType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_types.each do |project_type| %>
      <tr>
        <td><%= link_to project_type.name, project_type_path(project_type) %></td>
        <td><%= project_type.active %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_type_path(project_type), :class => 'btn btn-mini' %>
          <%= link_to "#{project_type.active ? 'Deactive' : 'Active'}",
                      project_type_path(project_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => "btn btn-mini #{project_type.active ? 'btn-danger' : 'btn-success'}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_type_path,
            :class => 'btn btn-primary' %>
