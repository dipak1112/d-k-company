<% provide(:title, 'Careers') %>
<%- model_class = Career -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @career.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:experience) %>:</strong></dt>
  <dd><%= @career.experience %></dd>
  <dt><strong><%= model_class.human_attribute_name(:involvement) %>:</strong></dt>
  <dd><%= @career.involvement %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @career.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:package) %>:</strong></dt>
  <dd><%= @career.package %></dd>
  <dt><strong><%= model_class.human_attribute_name(:skills) %>:</strong></dt>
  <dd><%= @career.skills %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              careers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_career_path(@career), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              career_path(@career),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
