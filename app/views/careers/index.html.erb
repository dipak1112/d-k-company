<%- model_class = Career -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:experience) %></th>
      <th><%= model_class.human_attribute_name(:involvement) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:package) %></th>
      <th><%= model_class.human_attribute_name(:skills) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @careers.each do |career| %>
      <tr>
        <td><%= link_to career.id, career_path(career) %></td>
        <td><%= career.title %></td>
        <td><%= career.experience %></td>
        <td><%= career.involvement %></td>
        <td><%= career.location %></td>
        <td><%= career.package %></td>
        <td><%= career.skills %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_career_path(career), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      career_path(career),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_career_path,
            :class => 'btn btn-primary' %>
